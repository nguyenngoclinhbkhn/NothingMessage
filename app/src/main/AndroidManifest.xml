<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nguyenngoclinh.nothingmessage">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".uis.activities.ActivityFirst"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".uis.activities.LoginActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".uis.activities.ActivityRegister"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".uis.activities.ActivityFriend" />
        <activity
            android:name=".uis.activities.ActivityMessage"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".uis.activities.ActivitySearchFriendId" />
        <service android:name=".service.ServiceNotification"
            android:enabled="true"></service>
        <service android:name=".service.IntentServiceDemo"></service>
        <service android:name=".service.IntentServiceSendMessage"></service>
        <service android:name=".service.ServiceDeleteMessage"></service>
    </application>

</manifest>